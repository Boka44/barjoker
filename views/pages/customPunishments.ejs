<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head %>
  </head>
  <body class="bg">
    <% include ../partials/header %>
    
    <div class="container">
    <div class="newDare">
      <form method="POST">
        <label class="whiteText" for="postPun">Add your own: </label><input type="text" name="postPun" class="newDareField form-text" size=50px>
        <input class="btn btn-primary" type="submit" value="Add">

      </form>
      </br>
    </div>
    </br>
 
    <div class="results whiteText">
      <% results.map(function(result) { %>
            <ul style="padding-left: 0px" id="li-<%= result.punId %>" >
              <button class="btn btn-danger" onclick="deletePun(<%= result.punId %>)">Delete</button> <%= result.pun %>
            </ul>
      <%}); %>
    </div>
  </div>
    
    
    <% include ../partials/footer %>
  <script type="text/javascript">
      function deletePun(id) {
        $.ajax({
          url: '/customPunishments/'+id,
          type: 'DELETE',
          success: function(result) {
            console.log(result)
              // Do something with the result
              $('#li-'+id).remove();
          }
        });
      }
  </script>
  </body>
</html>